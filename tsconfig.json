{
  "compilerOptions": {
    "jsx": "react",
    "lib": ["es2015", "esnext.array", "dom"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "downlevelIteration": true,
    "outDir": "es/"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
